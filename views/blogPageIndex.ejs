    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
            color: #333;
        }

        header.blog-header {
            /* background-color: #333; */
            color: white;
            padding: 20px;
            text-align: center;
        }

        .blog-intro {
            padding: 20px;
            text-align: center;
            background-color: #e9e9e9;
            border-bottom: 1px solid #ccc;
        }

        .blog-posts {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 15px;
            padding: 20px;
        }

        .post {
            background-color: white;
            border: 1px solid #ccc;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .post img {
            width: 100%;
            height: auto;
        }

        .post-content {
            padding: 15px;
        }

        .post h2 {
            margin-top: 0;
            font-size: 1.5em;
            color: #333;
        }

        .post p {
            font-size: 1em;
            line-height: 1.6;
            margin-bottom: 10px;
            color: #555;
        }

        .read-more {
            display: inline-block;
            padding: 10px 15px;
            background-color: #D89B1C;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }

        .read-more:hover {
            background-color: #D89B1C;
        }

     

        /* Responsive Styles */
        @media (max-width: 1024px) {
            .blog-posts {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 768px) {
            .blog-posts {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
