    <style>
        /* Reset and Basic Styles */
        body, h1, h2, h3, p, a {
            margin: 0;
            padding: 0;
            font-family: 'Clash Display', sans-serif;
            /* color: #333; */
        }

        body {
            line-height: 1.6;
            /* background-color: #f4f4f4; */
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: 0 auto;
           
            
        }
        .cta-button {
            background-color: #88c540; /* Subtle green */
            color: #fff;
            padding: 15px 30px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1rem;
        }

        .cta-button:hover {
            background-color: #76a837;
        }

        /* Positions Section */
        .positions-section {
            background-color: #333;
            padding: 60px 0;
        }

        .positions-section h2 {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 40px;
            color: #333;
        }

        .job-card {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .job-card h3 {
            font-size: 1.5rem;
            margin-bottom: 10px;
        }

        .job-card p {
            margin-bottom: 15px;
            color: #666;
        }

        .apply-button {
            background-color: #D89B1C;
            color: #fff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 1rem;
        }

        .apply-button:hover {
            background-color: #D89B1C;
        }

        /* Grid Layout for Job Cards */
        .container {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 30px;
        }

        @media (max-width: 992px) {
            .container {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 768px) {
            .container {
                grid-template-columns: 1fr;
            }
        }

     

        /* Responsive Design */
        @media (max-width: 768px) {
            .hero-content h1 {
                font-size: 2rem;
            }

            .cta-button {
                padding: 10px 20px;
                font-size: 0.9rem;
            }

            .positions-section h2 {
                font-size: 2rem;
            }

            .job-card h3 {
                font-size: 1.2rem;
            }
        }
    </style>
</head>
